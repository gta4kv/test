{% extends '@main/template.twig' %}


{% block content %}
    <div class="row">
        <form class="form-inline" method="get" action="">
            <div class="col-md-8">
                <div class="form-group">
                    <label class="sr-only" for="exampleInputPassword3">Password</label>
                    <select class="form-control" id="exampleInputPassword3" name="field">
                        {% for key, field in fields %}
                            {% set selected = '' %}

                            {% if defaults.field == key %}
                                {% set selected = ' selected' %}
                            {% endif %}

                            <option value="{{ key }}"{{ selected }}>{{ field }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail3">Email address</label>
                    <select class="form-control" id="exampleInputEmail3" name="operator">
                        {% for key, operator in operators %}
                            {% set selected = '' %}

                            {% if defaults.operator == key %}
                                {% set selected = ' selected' %}
                            {% endif %}

                            <option value="{{ key }}"{{ selected }}>{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label class="sr-only" for="eadsa">Email address</label>
                    <input type="text" class="form-control" id="eadsa" name="value" value="{{ defaults.value }}" placeholder="Search value">
                </div>
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        </form>
        <div class="col-md-4">
            <a href="/player/create" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-plus"></span> Create
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Actions</th>
        </tr>
        </thead>

        {% for player in players %}
            <tr>
                <td>{{ player.getId() }}</td>
                <td>{{ player.getUsername() }}</td>
                <td>{{ player.getEmail() }}</td>
                <td>{{ player.getFirstName() }}</td>
                <td>{{ player.getLastName() }}</td>
                <td>{{ player.getBirthDate() }}</td>
                <td>
                    <a href="/player/update/{{ player.getId() }}" title="Delete entry"><span
                                class="glyphicon glyphicon-edit"></span></a>
                    <a href="/player/delete/{{ player.getId() }}" title="Update entry"><span
                                class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}