{% extends '@main/template.twig' %}


{% block content %}

    <h3 class="text-center">New user</h3>

    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form method="post" class="form">
        <div class="form-group">
            <label for="inputFullName">Full Name</label>
            <input type="text" name="full_name" class="form-control" id="inputFullName" value="{{ player.getFullName() }}" placeholder="Full Name">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email address</label>
            <input type="email" name="email" class="form-control" value="{{ player.getEmail() }}" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" class="form-control" value="{{ player.getPassword() }}" id="inputPassword"
                   placeholder="Password">
        </div>

        <button type="submit" class="btn btn-success">Sign up</button>
    </form>


{% endblock %}